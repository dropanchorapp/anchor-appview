{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/348900b8b79f4a434cab4c74b3bc8d4d2fa8ee74/cli/schemas/config-file.v1.json",
  "lock": false,
  "imports": {
    "@fresh/core": "jsr:@fresh/core@^2.2.0",
    "fresh/dev": "jsr:@fresh/core@^2.2.0/dev",
    "fresh/internal": "jsr:@fresh/core@^2.2.0/internal",
    "@libsql/client": "npm:@libsql/client@0.17.0",
    "@libsql/client/web": "npm:@libsql/client@0.17.0/web",
    "@std/dotenv": "jsr:@std/dotenv@0.225",
    "@std/media-types": "jsr:@std/media-types@1",
    "@std/path": "jsr:@std/path@1"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-import-prefix"
      ]
    }
  },
  "include": [
    "backend/",
    "frontend/",
    "tests/",
    "main.ts",
    "dev.ts"
  ],
  "exclude": [
    "**/_fresh/*"
  ],
  "node_modules_dir": false,
  "tasks": {
    "dev": "deno run -A --watch=backend/,frontend/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno serve -A _fresh/server.js",
    "preview": "deno run -A main.ts",
    "test": "TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all tests/",
    "test:unit": "TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all tests/unit/",
    "test:integration": "TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all tests/integration/",
    "test:watch": "TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all --watch tests/",
    "quality": "deno fmt && deno lint && deno check --allow-import main.ts && TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all tests/",
    "quality-no-check": "deno fmt && deno lint && TURSO_DATABASE_URL=file::memory: COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all tests/",
    "deploy": "deno task build && deployctl deploy --prod --entrypoint=main.ts --exclude=node_modules/.deno/libsql*"
  }
}
